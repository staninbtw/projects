<Window x:Class="Bank.pictureinsert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="pictureinsert" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
        <TextBox x:Name="tb_path" Width="300"/>
        <TextBox x:Name="tb_name" Width="150"/>
        <Button Content="Вставить картинку" Height="25" Width="150" Click="insert_image"/>
        </StackPanel>
    </Grid>
</Window>
